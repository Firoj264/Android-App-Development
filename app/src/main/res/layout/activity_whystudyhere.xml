<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Whystudyhere">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/universitydesignphoto"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:background="#EF0606"
                android:layout_margin="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/text_margin"
                android:fontFamily="@string/bold"
                android:text="Why Study Here"
                android:textColor="#FBFBFB"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/text_margin"
                android:textStyle="bold"
                android:background="#63E468"
                android:textSize="20dp"
                android:textColor="#070707"
                android:layout_marginLeft="8dp"
                android:text="Government and UGC Approved and Recognized Leader in Higher Education"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:background="#FBFBFB"
                android:layout_margin="6dp"
                android:fontFamily="@string/light"
                android:text="@string/why1"
                android:textColor="#070707"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/text_margin"
                android:textStyle="bold"
                android:background="#63E468"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#070707"
                android:layout_marginLeft="8dp"
                android:text="Faculty Strength"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:background="#FBFBFB"
                android:layout_margin="6dp"
                android:fontFamily="@string/light"
                android:text="@string/why2"
                android:textColor="#070707"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/text_margin"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#63E468"
                android:textSize="20dp"
                android:textColor="#070707"
                android:layout_marginLeft="8dp"
                android:text="High Quality Education"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:background="#FBFBFB"
                android:layout_margin="6dp"
                android:fontFamily="@string/light"
                android:text="@string/why3"
                android:textColor="#070707"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/text_margin"
                android:textStyle="bold"
                android:background="#63E468"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#070707"
                android:layout_marginLeft="8dp"
                android:text="Job Opportunity"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:background="#FBFBFB"
                android:layout_margin="6dp"
                android:fontFamily="@string/light"
                android:text="@string/why4"
                android:textColor="#070707"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/text_margin"
                android:textStyle="bold"
                android:background="#63E468"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#070707"
                android:layout_marginLeft="8dp"
                android:text="Affordable Fees"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:background="#FBFBFB"
                android:layout_margin="6dp"
                android:fontFamily="@string/light"
                android:text="@string/why5"
                android:textColor="#070707"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/back"
                android:background="#F60202"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Back to HomePage"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/title_size1"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/design_default_color_on_primary"
                android:fontFamily="@string/bold"/>
        </LinearLayout>



    </ScrollView>

</FrameLayout>