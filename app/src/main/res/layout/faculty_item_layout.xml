<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FA0202"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/text_margin"
        android:background="#ffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="12dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherName"
                    android:text="Shafayet Hossain"
                    android:padding="5dp"
                    android:textColor="#FF0505"
                    android:textSize="@dimen/title_size1"
                    android:fontFamily="@string/bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherPost"
                    android:layout_marginTop="1dp"
                    android:text="Department Head"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#FF0505"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherEmail"
                    android:layout_marginTop="1dp"
                    android:text="Email: shafayethossain123@gmail.com"
                    android:textColor="#FF0505"
                    android:padding="5dp"
                    android:textSize="12sp"/>





            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:id="@+id/teacherImage"
                android:layout_height="95dp"
                android:src="@drawable/man"
                android:layout_marginVertical="@dimen/text_margin"
                android:layout_gravity="center"
                android:layout_weight="0.5"/>




        </LinearLayout>








    </LinearLayout>

</com.google.android.material.card.MaterialCardView>